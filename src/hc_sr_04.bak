void uzaklik_olc(){
   output_a(0x00);
   
   output_low(trig1);// ters baðlý high olur çýkýþ
   delay_us(10);
  // delay_ms(1000);
   output_high(trig1);
   set_timer1(0x00);
   
   //fprintf(pc,"SR04.......\r");
   while(!input(echo1));
   set_timer1(0x00);
   //fprintf(pc,"high.......\r");
   while(input(echo1));
   //fprintf(pc,"low.......\r");
   sure=get_timer1();
   uzaklik=sure/58.0;// (sure/58)/2; timer1 2uS de bir sayar 1:8 prescalar deðeri ile 
                    // Fcy=8MHz/2=4MHz=0.25us, 1:8= 0.25*8 = 2us   
}
